@model webnc_api.Models.Baihat

@{
    ViewBag.Title = "EditSong";
    Layout = "~/Views/Shared/userLayout.cshtml";
}
<style>
    .top {
        margin-top: 100px;
    }

    .add {
        width: 86px;
        height: 39px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        background-color: antiquewhite;
        border-radius: 5px;
    }
</style>

<div class="top">

</div>
<h2>EditSong</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDSong)

        <div class="form-group">
            @Html.LabelFor(model => model.Tenbai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tenbai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tenbai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Casi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Casi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Casi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Theloai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Theloai, new SelectList(ViewBag.TheloaiList, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Theloai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Img, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="file" name="flinkimg" class="form-control" accept=".jpg" />
                @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexSong")
</div>
